.main-chat
  .main-header
    .main-header__left
      .main-header__left__group
        = @group.name
      .main-header__left__member-list
        Memberï¼š
        - @group.users.each do |user|
          = "#{user.name}"
    = link_to edit_group_path(@group), class: "main-header__edit" do
      = "Edit"
  .main-messages
    = render @messages
  .main-form
    .main-form__window
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'main-form__window__text', placeholder: 'type a message'
        .main-form__window__mask
          = f.label :image, class: 'main-form__window__mask__image' do
            = icon('fas', 'image', class: 'main-form__window__mask__image--icon')
            = f.file_field :image, class: 'main-form__window__mask__image--hidden'
        = f.submit 'Send', class: 'main-form__window__submit'