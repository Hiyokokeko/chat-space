.side-bar
  .side-header
    .side-header__items
      .side-header__items__name
        = current_user.name
      .side-header__items__icons
        .side-header__item__icons__new-group
          = link_to new_group_path do
            = icon('far', 'edit')
        .side-header__item__icons__user-edit
          = link_to edit_user_path(current_user) do
            = icon('fa', 'cog')
  .side-groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__group-name
            = group.name
          .group__group-message
            = group.show_last_message